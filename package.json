{
  "name": "nodejs-api",
  "version": "1.0.0",
  "description": "A starting point to implement APIs with node js",
  "main": "server",
  "scripts": {
    "lint": "eslint --ext=js .",
    "shrink": "npm shrinkwrap --dev",
    "start": "node server",
    "test": "npm run test:unit && npm run test:api",
    "test:api": "mocha 'test/api-test'",
    "test:unit": "export NODE_ENV='test' && mocha 'server/**/*.spec.js'",
    "typings": "typings install",
    "update": "npm install && npm prune && npm outdated"
  },
  "pre-commit": [
    "test",
    "lint"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nimedev/nodejs-api.git"
  },
  "author": {
    "name": "Nicolás Mejía Correa",
    "email": "nicolasmejiaco@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nimedev/nodejs-api/issues"
  },
  "homepage": "https://github.com/nimedev/nodejs-api#readme",
  "engines": {
    "node": ">=6.0.0 <7.0.0"
  },
  "dependencies": {
    "body-parser": "1.15.2",
    "compression": "1.6.2",
    "cors": "2.8.1",
    "errorhandler": "1.4.3",
    "express": "4.14.0",
    "mongoose": "4.6.1",
    "morgan": "1.7.0"
  },
  "devDependencies": {
    "chai": "3.5.0",
    "chai-http": "3.0.0",
    "eslint": "https://registry.npmjs.org/eslint/-/eslint-3.5.0.tgz",
    "eslint-config-nimedev": "3.0.1",
    "mocha": "https://registry.npmjs.org/mocha/-/mocha-3.0.2.tgz",
    "pre-commit": "1.1.3"
  }
}
